pipeline {
    agent any
    
    stages() {
        
        stage('change directory') {
            steps {

                sh "cd front"
            }
        }        
        stage('build') {
            steps {

                sh "cd /var/jenkins_home/workspace/joblog/front"
                sh "pwd"
                sh "npm run build"
                sh "docker build -t minsu10/joblog-client ."
                sh "docker push minsu10/joblog-client"
            }
        }        
    }
}